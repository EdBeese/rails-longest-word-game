<div class="container">
  <h1>New Game</h1>
  <div class="letters">
     <ul>
      <% @letters.each do |l| %>
      <li><%= l %></li>
      <% end %>
    </ul>
  </div>
  <div class="input">
    <p>Your Longest Word</p>
    <form action="/score" method="post">
      <div class="form-group">
        <input class="form-control" type="text" name="word">
      </div>
      <input class="btn btn-primary" type="submit" value="Play">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>

</div>
