<div class="container text-center result-container">
  <div class="row">
    <h1>Result</h1>
  </div>
  <div class="row result">
    <p><%= @message %></p>
  </div>
  <div class="row score-header">
    <h2>Your Score</h2>
  </div>
  <div class="row">
    <div class="col-6">
     <p>Points This Round</p>
     <p class="scr-num"><%= @score %></p>
    </div>
    <div class="col-6">
     <p>Current Score</p>
     <p class="scr-num"><%= session[:score] %></p>
   </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "Play again", new_path, class: "btn btn-primary" %>
    <%= link_to "Reset Score", reset_path, class: "btn btn-danger"%>
  </div>

</div>
